<div class="row" id="name-date">
  <div class="medium-6 large-6 columns namelogo">
    <h1>Parag & Shreya | 9.6.2015</h1>
  </div>
  <div class= "medium-6 large-6 columns timer">
    <iframe width="304" height="104" src="https://w2.countingdownto.com/956582" frameborder="0">
    </iframe>
  </div>
</div>

<div class="row e_login">
  <div class="large-6 medium-6 columns e-pic">
    <%= image_tag 'DSC_9678.JPG', class:'tree_pic'%>
  </div>

  <div class="large-6 medium-6 columns">
    <form action="guests/retrieve_guest" method="get">
      <h3>Engagement R.S.V.P.</h3>

        <% if flash[:error] %>
          <label class="error"><%=flash[:error]%></label>
        <%end%>

      <div class="indicates-required">
        <span class="asterisk">*</span> indicates required
      </div>

      <label>First Name
        <span class="asterisk">*</span>
      </label>
      <input type="text" name="first_name">

      <label>Last Name
        <span class="asterisk">*</span>
      </label>
      <input type="text" name="last_name">

      <label>Zip Code
        <span class="asterisk">*</span>
      </label>
      <input type="text" name="zip_code", placeholder="Enter zip code from mailing envelope.">

      <input type="submit" value="Submit">
    </form>
  </div>
</div>